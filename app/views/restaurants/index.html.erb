<%= link_to "Add a new restaurant", new_restaurant_path%>

<h1>Restaurants</h1>


<% @restaurants.each do |restaurant|%>
 <h2> <%= link_to restaurant.name, restaurant_path(restaurant)%>

  <%= link_to restaurant_path(restaurant), method: :delete do%>
  <i class="fa fa-trash-o"></i>
  <% end %>


  <%= link_to edit_restaurant_path(restaurant) do%>
  <i class="fa fa-pencil"></i>
  <% end %>
  </h2>

<p> Adress: <%= restaurant.address %> </p>
<p> Number: <%= restaurant.phone_number %> </p>
<p> Category: <%= restaurant.category %> </p>
<% end %>





